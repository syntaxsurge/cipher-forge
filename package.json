{
  "name": "cipher-forge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:code": "prettier --write \"**/*.{ts,tsx,js,jsx,cjs,mjs,cts,mts,json,css,scss,mdx,html}\"",
    "lint:all": "pnpm run lint:fix && pnpm run lint && pnpm run format:code",
    "typecheck": "tsc --noEmit --incremental false",
    "release:check": "pnpm run build && pnpm run lint && pnpm run typecheck",
    "convex:dev": "node ./scripts/convex-dev.cjs",
    "convex:deploy": "npx convex deploy -y",
    "convex:redeploy": "pnpm run convex:deploy && pnpm run convex:dev",
    "convex:reset": "dotenv -e .env -e .env.local -- tsx scripts/reset-convex.ts",
    "build:contracts": "pnpm run soroban:build-contracts",
    "zk:test": "export PATH=\"$HOME/.nargo/bin:$PATH\" && cd zk/secret_word_puzzle && nargo test",
    "zk:compile": "export PATH=\"$HOME/.nargo/bin:$PATH\" && cd zk/secret_word_puzzle && nargo compile",
    "zk:sync-assets": "node scripts/zk-sync-noir-assets.mjs",
    "zk:build": "pnpm run zk:test && pnpm run zk:compile && pnpm run zk:sync-assets",
    "zk:write-vk": "export PATH=\"$HOME/.nargo/bin:$PATH\" && cd zk/secret_word_puzzle && bb write_vk -s ultra_honk -b ./target/secret_word_puzzle.json -o ./target --oracle_hash keccak",
    "soroban:build-artifacts": "bash scripts/soroban-build-circuit-artifacts.sh",
    "soroban:build-contracts": "bash scripts/soroban-build-contracts.sh",
    "soroban:bindings:testnet": "bash scripts/soroban-generate-bindings.sh",
    "contracts:export:testnet": "node scripts/export-testnet-config.mjs",
    "soroban:deploy-verifier:testnet": "bash scripts/soroban-deploy-verifier-testnet.sh",
    "soroban:deploy-game:testnet": "bash scripts/soroban-deploy-game-testnet.sh",
    "soroban:smoke:testnet": "bash scripts/soroban-smoke-test-testnet.sh",
    "soroban:day3:testnet": "bash scripts/soroban-day3-pipeline-testnet.sh",
    "auth:print-jwks-data-uri": "dotenv -e .env -e .env.local -- node scripts/print-jwks-data-uri.mjs",
    "b2:set-cors": "dotenv -e .env -e .env.local -- tsx scripts/b2-set-cors.ts"
  },
  "dependencies": {
    "@aztec/bb.js": "^2.1.11",
    "@creit.tech/stellar-wallets-kit": "^1.9.5",
    "@hookform/resolvers": "^5.2.2",
    "@noble/hashes": "^2.0.1",
    "@noir-lang/acvm_js": "1.0.0-beta.18",
    "@noir-lang/noir_js": "1.0.0-beta.18",
    "@noir-lang/noirc_abi": "1.0.0-beta.18",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@stellar/stellar-sdk": "^14.5.0",
    "buffer": "^6.0.3",
    "cipherforge_game": "file:packages/cipherforge_game",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "comlink": "^4.4.2",
    "convex": "^1.28.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.542.0",
    "next": "^15.0.0",
    "next-themes": "^0.4.6",
    "process": "^0.11.10",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.886.0",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "webpack": "^5.105.2"
  }
}
